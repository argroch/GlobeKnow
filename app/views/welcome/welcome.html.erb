<h1 text-align="center">What Do You GlobeKnow?</h1>
<%= image_tag 'globe1.png', :class=>"bigglobe" %>
<br />
<p class="centerize">
	Sign In and Show What You GlobeKnow
</p>
<div class="centerize">
	<%= form_for("glober", :url => glober_session_path) do |f| %>
	  E-mail: <%= f.text_field :email %><br />
	  Password: <%= f.password_field :password %><br />
	  <%= f.check_box :remember_me %>
	  <%= f.label :remember_me %>
	  <%= f.submit 'Sign In' %><br />
	  <%= link_to "Forgot your password?", new_password_path('glober') %><br />
	<% end %>
	Not Yet a Glober? <%= link_to "Sign Up Now!", new_glober_registration_path %>
</div>

<%= link_to "Add Countries", countries_path %>
<%= link_to "Add States", states_path %>