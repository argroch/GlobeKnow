<h1>Listing states</h1>

<table>
  <thead>
    <tr>
      <th>#</th>
      <td width="20"></td>
      <th>Name</th>
      <td width="20"></td>
      <th>Capital</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= state.id %></td>
        <td width="20"></td>
        <td><%= link_to state.name, state %></td>
        <td width="20"></td>
        <td><%= state.capital %></td>
        <td width="20"></td>
        <td><%= link_to 'Edit', edit_state_path(state) %> | 
            <%= link_to 'Destroy', state, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

